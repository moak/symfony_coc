{% extends "::base_admin.html.twig" %}
{% set id_clan = clan.id %}

 {% block title %}
     <title>Nouvelle guerre de clan</title>
 {% endblock %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{ 'menu.war_edit'|trans }}</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>


    <ol class="breadcrumb">
        <li><a href="{{ path('admin', { 'id_clan': clan.id }) }}"><p class="fa fa-home"></p> Dashboard</a></li>
        <li><a href="{{ path('admin_wars', { 'id_clan': clan.id }) }}">{{ 'menu.wars'|trans }</a></li>
        <li class="active">{{ 'menu.war_edit'|trans }</li>
    </ol>


    <div class="container">


        <div class="well">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            {{ form_errors(form) }}

            <div class="form-group">
                {{ form_label(form.start, null, {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                {{ form_errors(form.start) }}

                <div class="col-sm-4">
                    {{ form_widget(form.start, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>


            <div class="form-group">
                {{ form_label(form.opponent, null, {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                {{ form_errors(form.opponent) }}

                <div class="col-sm-4">
                    {{ form_widget(form.opponent, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>


            <div class="form-group">
                {{ form_label(form.result, null, {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                {{ form_errors(form.result) }}

                <div class="col-sm-4">
                    {{ form_widget(form.result, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.image, null, {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                {{ form_errors(form.image) }}
                <div class="col-sm-4">
                    {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>


            <div class="form-group">

                <div class="col-sm-3"></div>
                <div class="col-sm-4">
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>
            </div>

            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>

        {# form_start(form, {'action': path('coc_homepage'), 'method': 'GET'}) }} #}
        {{ form(form)}}
    </div>
{% endblock %}

