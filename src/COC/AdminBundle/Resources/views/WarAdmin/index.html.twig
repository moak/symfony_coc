{% extends "::base_admin.html.twig" %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Guerres de clan</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <!-- Page Content -->
    <div class="container">
        <a href="{{ path('admin_war_add')}}"><button class="btn btn-default btn-success">Nouvelle guerre</button></a>
        <hr>
        {# form_start(form, {'action': path('coc_homepage'), 'method': 'GET'}) }} #}

        <table class="table">
            <thead>
            <tr>
                <th>Guerre de clan</th>
                <th>Debut</th>
                <th>Fin</th>
                <th></th>
            </tr>
            </thead>
            <tbody>

            {% if wars|length != 0 %}
                {% for war in wars %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ war.start|date('Y-m-d H:s') }}</td>
                        <td>{{ war.end|date('Y-m-d H:s') }}</td>
                        <td> <a href="{{ path('admin_war_delete', { 'id': war.id }) }}" class="btn btn-default btn-danger">Supprimer</a></td>

                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td>-</td>
                    <td>0 guerre de clan trouv√©e</td>
                    <td>-</td>

                    <td></td>
                </tr>
            {% endif %}
            </tbody>
        </table>
        <hr>


    </div>
    <!-- /.container -->

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/footable.js') }}" type="text/javascript"></script>
{% endblock %}