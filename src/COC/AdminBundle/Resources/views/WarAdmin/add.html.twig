{% extends "::base_admin.html.twig" %}

 {% block title %}
     <title>Nouvelle guerre de clan</title>
 {% endblock %}

{% block body %}


    <div class="container">
        <h2>Nouvelle guerre</h2>

        <div class="well">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

            {# Les erreurs générales du formulaire. #}
            {{ form_errors(form) }}

            <div class="form-group">
                {# Génération du label. #}
                {{ form_label(form.start, 'Date', {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

                {# Affichage des erreurs pour ce champ précis. #}
                {{ form_errors(form.start) }}

                <div class="col-sm-4">
                    {# Génération de l'input. #}
                    {{ form_widget(form.start, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            {# Génération automatique des champs pas encore écrits.
               Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
               et tous les champs cachés (type « hidden »). #}
            {{ form_rest(form) }}

            {# Fermeture de la balise <form> du formulaire HTML #}
            {{ form_end(form) }}
        </div>

        {# form_start(form, {'action': path('coc_homepage'), 'method': 'GET'}) }} #}
        {{ form(form)}}
    </div>
{% endblock %}

