{% extends "::base_admin.html.twig" %}

 {% block title %}
     <title>Ajouter un joueur</title>
 {% endblock %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Ajouter une attaque</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>


    <ol class="breadcrumb">
        <li><a href="{{ path('admin') }}"><p class="fa fa-home"></p> Dashboard</a></li>
        <li><a href="{{ path('admin_bestAttacks') }}"><p class="fa fa-home"></p> Meilleures attaques</a></li>
        <li class="active">Ajouter une attaque</li>
    </ol>

    <div class="container">
        <div class="well">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            {{ form_errors(form) }}

            <div class="form-group">
                {{ form_label(form.image, 'Image', {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                {{ form_errors(form.image) }}

                <div class="col-sm-4">
                    {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.gold, 'Or', {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                {{ form_errors(form.gold) }}
                <div class="col-sm-4">
                    {{ form_widget(form.gold, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.elixir, 'Elixir', {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                {{ form_errors(form.elixir) }}

                <div class="col-sm-4">
                    {{ form_widget(form.elixir, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-3"></div>
                <div class="col-sm-4">
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>
            </div>

            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>

        {# form_start(form, {'action': path('coc_homepage'), 'method': 'GET'}) }} #}
        {{ form(form)}}
    </div>
{% endblock %}

