{% extends "::base_admin.html.twig" %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Liste des comptes</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>


    <ol class="breadcrumb">
        <li><a href="{{ path('admin') }}"><p class="fa fa-home"></p> Dashboard</a></li>
        <li class="active">Comptes</li>
    </ol>

    <!-- Page Content -->
    <div class="container">


        <table class="table">
            <thead>
                <tr>
                    <th>Nom de compte</th>
                    <th>Compte assigné</th>
                    <th>Nom du joueur</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

            {% if users|length != 0 %}
                {% for user in users %}
                    <tr>
                        <td>{{ user.username }}</td>
                        {% if user.player.id is defined %}
                            <td>Oui</td>
                            <td>{{ user.player.name }}</td>
                        {% else %}
                            <td>Non</td>
                            <td><a href="{{ path('admin_user_edit', { 'id': user.id }) }}"><button class="btn btn-default btn-success">Assigner joueur</button></a></td>
                        {% endif %}
                        <td>

                            <a href="{{ path('admin_user_delete', { 'id': user.id }) }}" class="btn btn-default btn-danger alert">Supprimer</a>
                            {% if user.player.id is defined %}
                                <a href="{{ path('admin_user_dissociate', { 'id': user.player.id }) }}"><button class="btn btn-default btn-success">Dissocier</button></a>
                            {% endif %}

                        </td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td>-</td>
                    <td>0 user trouvé</td>
                    <td>-</td>

                    <td></td>
                </tr>
            {% endif %}
            </tbody>
        </table>
        <hr>


    </div>
    <!-- /.container -->

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/footable.js') }}" type="text/javascript"></script>
{% endblock %}