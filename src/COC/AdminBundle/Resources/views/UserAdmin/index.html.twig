{% extends "::base_admin.html.twig" %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Comptes</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <!-- Page Content -->
    <div class="container">


        <table class="table">
            <thead>
                <tr>
                    <th>Nom de compte</th>
                    <th>Compte assigné</th>
                    <th>Joueur</th>
                </tr>
            </thead>
            <tbody>

            {% if users|length != 0 %}
                {% for user in users %}
                    <tr>
                        <td>{{ user.username }}</td>
                        {% if user.player.id is defined %}
                            <td>Oui</td>
                            <td>{{ user.player.name }}</td>
                        {% else %}
                            <td>Non</td>
                            <td>-</td>
                        {% endif %}
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td>-</td>
                    <td>0 user trouvé</td>
                    <td>-</td>

                    <td></td>
                </tr>
            {% endif %}
            </tbody>
        </table>
        <hr>


    </div>
    <!-- /.container -->

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/footable.js') }}" type="text/javascript"></script>
{% endblock %}