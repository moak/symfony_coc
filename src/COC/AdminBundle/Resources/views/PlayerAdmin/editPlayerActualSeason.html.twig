{% extends "::base_admin.html.twig" %}
{% set id_clan = clan.id %}

{% block body %}


    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{ player.name }}</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>


    <ol class="breadcrumb">
        <li><a href="{{ path('admin', { 'id_clan': clan.id }) }}"><p class="fa fa-home"></p> Dashboard</a></li>
        <li><a href="{{ path('admin_users', { 'id_clan': clan.id }) }}">{{ 'menu.history'|trans }}</a></li>
        <li class="active">{{ 'menu.history_edit'|trans }}</li>
    </ol>

    <div class="container">


        <div class="well">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            {{ form_errors(form) }}

            <div class="form-group">
                {{ form_label(form.troopSent, null, {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                {{ form_errors(form.troopSent) }}

                <div class="col-sm-4">
                    {{ form_widget(form.troopSent, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.troopReceived, null, {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                {{ form_errors(form.troopReceived) }}

                <div class="col-sm-4">
                    {{ form_widget(form.troopReceived, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>


            <div class="form-group">
                {{ form_label(form.trophy, null, {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                {{ form_errors(form.trophy) }}

                <div class="col-sm-4">
                    {{ form_widget(form.trophy, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.attackWon, null, {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                {{ form_errors(form.attackWon) }}

                <div class="col-sm-4">
                    {{ form_widget(form.attackWon, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">

                <div class="col-sm-3"></div>
                <div class="col-sm-4">
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>
            </div>

            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>

        {{ form(form)}}
    </div>

    {{ form(form)}}

{% endblock %}