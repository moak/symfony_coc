{% extends "::base_admin.html.twig" %}
{% set id_clan = clan.id %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{ 'menu.bestAttacks'|trans }}</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>


    <ol class="breadcrumb">
        <li><a href="{{ path('admin', { 'id_clan': clan.id }) }}"><p class="fa fa-home"></p> Dashboard</a></li>
        <li class="active">{{ 'menu.bestAttacks'|trans }}</li>
    </ol>

    <!-- Page Content -->
    <div class="row">
        <hr>
        <div class="row">
            <br>
            {% if images|length != 0 %}
                {% for image in images %}
                    <div class="col-sm-6 col-md-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title text-center">{{ loop.index }} (<b>Gold</b>: {{ image.gold }} , <b>Elixir</b>: {{ image.elixir }}) </h3>
                            </div>
                            <div class="panel-body">
                                <a rel="gallery-1"  href="{{ asset(image.image.getWebPath(clan.id)) }}" class="swipebox" title="">
                                    <img  class="img-responsive" src="{{ asset(image.image.getWebPath(clan.id)) }}" />
                                </a>
                            </div>
                            <div class="panel-footer">
                                    <a class="btn btn-danger pull-right" href="{{ path('admin_bestAttack_delete' , {'id': image.id , 'id_clan': clan.id}) }}">{{ 'action.delete'|trans }}</a>
                                    <a class="btn btn-info " href="{{ path('admin_bestAttack_edit' , {'id': image.id , 'id_clan': clan.id }) }}">{{ 'action.edit'|trans }}</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                {{ 'notFound'|trans }}

            {% endif %}
        </div>


    </div>
    <!-- /.container -->

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/jquery.tablesorter.min.js') }}" type="text/javascript"></script>
{% endblock %}