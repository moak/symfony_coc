{% extends "::base_admin.html.twig" %}
{% set id_clan = clan.id %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{ 'menu.bases'|trans }}</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>


    <ol class="breadcrumb">
        <li><a href="{{ path('admin', { 'id_clan': clan.id }) }}"><p class="fa fa-home"></p> Dashboard</a></li>
        <li class="active">{{ 'menu.bases'|trans }}</li>
    </ol>


    <div class="container">
        <hr>
        <div class="row">
            <br>
            {% if images|length != 0 %}
                {% for image in images %}
                    <div class="col-sm-6 col-md-4">
                        <div class="panel panel-default text-center">
                            <div class="panel-heading">
                                <h3 class="panel-title ">
                                    {% if image.type == 1 %}
                                        {{ 'label.war'|trans }}
                                    {% else %}
                                        {{ 'label.farm'|trans }}
                                    {% endif %}
                                    ({{ 'player.ht'|trans }} {{ image.hallTown }})
                                </h3>
                            </div>
                            <div class="panel-body">
                                <img  class="img-responsive" src="{{ asset('uploads/' ~ image.image.path) }}" />
                            </div>
                            <div class="panel-footer supercell-font">
                                {{ 'label.posted_by'|trans }} {{ image.user.username }}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                {{ 'notFound'|trans }}
            {% endif %}
        </div>


    </div>
    <!-- /.container -->

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/jquery.tablesorter.min.js') }}" type="text/javascript"></script>
{% endblock %}