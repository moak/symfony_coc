{% extends "::base_admin.html.twig" %}
{% set id_clan = clan.id %}

 {% block title %}
     <title>{{ 'menu.video_add'|trans }}</title>
 {% endblock %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{ 'menu.video_add'|trans }}</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>


    <ol class="breadcrumb">
        <li><a href="{{ path('admin', { 'id_clan': clan.id }) }}"><p class="fa fa-home"></p> Dashboard</a></li>
        <li><a href="{{ path('admin_videos', { 'id_clan': clan.id }) }}">{{ 'menu.videos'|trans }}</a></li>
        <li class="active">{{ 'menu.video_add'|trans }}</li>
    </ol>

    <div class="container">

        <div class="well">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            {{ form_errors(form) }}

            <div class="form-group">
                {{ form_label(form.title, 'Title', {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                {{ form_errors(form.title) }}
                <div class="col-sm-4">
                    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.url, 'Lien youtube', {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                {{ form_errors(form.url) }}
                <div class="col-sm-4">
                    {{ form_widget(form.url, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.published, 'Publier sur la page principale', {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                {{ form_errors(form.published) }}
                <div class="col-sm-4">
                    {{ form_widget(form.published, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-3"></div>
                <div class="col-sm-4">
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>
            </div>

            {{ form_end(form) }}
        </div>

        {{ form(form)}}
    </div>
{% endblock %}

