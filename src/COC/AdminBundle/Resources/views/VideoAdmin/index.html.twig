{% extends "::base_admin.html.twig" %}
{% set id_clan = clan.id %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Ajouter une vidéo</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>


    <ol class="breadcrumb">
        <li><a href="{{ path('admin', { 'id_clan': clan.id }) }}"><p class="fa fa-home"></p> Dashboard</a></li>
        <li class="active">Vidéos</li>
    </ol>


    <!-- Page Content -->
    <div class="container">
        <a class="btn btn-normal btn-success" href="{{ path('admin_video_add', { 'id_clan': clan.id }) }}">Ajouter une vidéo</a>
        <hr>
        <table class="table">
            <thead>
            <tr>
                <th>Titre</th>
                <th>Lien youtube</th>
                <th>Publiée</th>
                <th></th>
            </tr>
            </thead>
            <tbody>

            {% if videos|length != 0 %}
                {% for video in videos %}
                    <tr>
                        <td>{{ video.title }}</td>
                        <td>{{ video.url| raw }}</td>
                        <td>{{ video.published|boolean }}</td>
                        <td>
                            <a href="{{ path('admin_video_edit', { 'id': video.id , 'id_clan': clan.id }) }}" class="btn btn-default btn-info">Editer</a>
                            <a href="{{ path('admin_video_delete', { 'id': video.id , 'id_clan': clan.id}) }}" class="btn btn-default btn-danger alert">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td>-</td>
                    <td>0 vidéo trouvée</td>
                    <td>-</td>

                    <td></td>
                </tr>
            {% endif %}
            </tbody>
        </table>


    </div>
    <!-- /.container -->

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/jquery.tablesorter.min.js') }}" type="text/javascript"></script>
{% endblock %}