{% extends "::base_admin.html.twig" %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Ajouter un vidéo</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>


    <ol class="breadcrumb">
        <li><a href="{{ path('admin') }}"><p class="fa fa-home"></p> Dashboard</a></li>
        <li class="active">Vidéos</li>
    </ol>


    <!-- Page Content -->
    <div class="container">


        <hr>
            <a class="btn btn-normal btn-success" href="{{ path('coc_video_add') }}">Ajouter une vidéo</a>

        <div class="row">
            <br>
            {% if videos|length != 0 %}
                {% for video in videos %}
                    <div class="col-sm-6 col-md-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title text-center">{{ video.title }}</h3>
                            </div>
                            <div class="panel-body">

                                <p>{{ video.url| raw  }}</p>
                            </div>
                            <div class="panel-footer">
                                <a href="{{ path('admin_video_delete', { 'id': video.id }) }}" class="btn btn-default btn-danger">Supprimer</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                Aucune vidéo trouvée.
            {% endif %}
        </div>


    </div>
    <!-- /.container -->

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/jquery.tablesorter.min.js') }}" type="text/javascript"></script>
{% endblock %}