{% extends "::base_admin.html.twig" %}
{% set id_clan = clan.id %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Dashboard  <a href="javascript:introJs().setOption('showProgress', true).start();" class="pull-right btn btn-success"><i class="fa fa-coffee"></i> Démo administration</a></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <ol class="breadcrumb" data-step="1" data-position='top' data-intro="Bienvenue sur l'administration">
        <li><a href="{{ path('admin', { 'id_clan': clan.id }) }}"><p class="fa fa-home"></p> Dashboard</a> </li>
    </ol>


    <div class="panel panel-success">
        <!-- /.panel-heading -->
        <div class="panel-body">
            <strong>Bienvenue!</strong> Si vous faites vos premiers pas sur l'administration, pensez à ajouter les joueurs qui composent votre clan <a href="{{ path('admin_players', {'id_clan' : clan.id}) }}">ici</a> .
        </div>
        <!-- /.panel-body -->
    </div>

    <div class="panel panel-success">
        <div class="panel-heading">
            Message clan (<a href="{{ path('admin_clan_edit', { 'id_clan': clan.id } ) }}">edit</a>)
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            {{ clan.message }}
        </div>
        <!-- /.panel-body -->
    </div>

    <div class="row">
        <div class="col-lg-3 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-user fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">{{ numberPlayers }}</div>
                            <div>Joueurs</div>
                        </div>
                    </div>
                </div>
                <a href="{{ path('admin_players', { 'id_clan': clan.id , 'type' : 1}) }}">
                    <div class="panel-footer">
                        <span class="pull-left">Tous les joueurs</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            {% if numberUsersNonAssigned > 0 %}
                <div class="panel panel-red">
            {% else %}
                <div class="panel panel-green">
            {% endif %}

                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            {% if numberUsersNonAssigned > 0 %}
                                <i class="fa fa-times fa-5x"></i>
                            {% else %}
                                <i class="fa fa-check fa-5x"></i>
                            {% endif %}
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">{{ numberUsersNonAssigned }}</div>
                            <div>Compte non assignés</div>
                        </div>
                    </div>
                </div>

                    <a href="{{ path('admin_users', { 'id_clan': clan.id }) }}">
                        <div class="panel-footer">
                            <span class="pull-left">Assigner joueur</span>
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                            <div class="clearfix"></div>
                        </div>
                    </a>
                </a>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="panel panel-yellow">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-camera fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">{{ numberBases }}</div>
                            <div>Nombre de bases</div>
                        </div>
                    </div>
                </div>
                <a href="{{ path('admin_bases', { 'id_clan': clan.id }) }}">
                    <div class="panel-footer">
                        <span class="pull-left">Liste des bases</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="panel panel-green">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-video-camera fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">{{ numberVideos }}</div>
                            <div>Nombre de vidéos</div>
                        </div>
                    </div>
                </div>
                <a href="{{ path('admin_videos', { 'id_clan': clan.id }) }}">
                    <div class="panel-footer">
                        <span class="pull-left">Liste des vidéos</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>

{% endblock %}


{% block javascripts %}
    <script>
        if ('{{ display }}' && screen.width > 479)
        {
            introJs().setOption('showProgress', true).start();
        }



    </script>

{% endblock %}

