{% extends "::base.html.twig" %}

{% block body %}




    <!-- Page Content -->
    <div class="container">

        <h2>Meilleures attaques du clan</h2>
        <hr>
            <a class="btn btn-normal btn-success" href="{{ path('coc_imageBestAttack_add') }}">Ajouter une attaque</a>

        <div class="row">
            <br>
            {% if images|length != 0 %}
                {% for image in images %}
                    <div class="col-sm-6 col-md-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title text-center">{{ loop.index }}</h3>
                            </div>
                            <div class="panel-body">
                                <a rel="gallery-1"  href="{{ asset(image.getWebPath) }}" class="swipebox" title="">
                                    <img  class="img-responsive" src="{{ asset(image.getWebPath) }}" />
                                </a>

                            </div>
                            <div class="panel-footer">
                                <p><b>Gold</b>: {{ image.gold }}
                                    {% if app.user %}
                                        <a class="btn pull-right btn-success" href="{{ path('coc_imageBestAttack_edit' , {'id': image.id }) }}">Editer</a></p>
                                    {% endif %}
                                <p><b>Elixir</b>: {{ image.elixir }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                Aucune base trouv√©e.
            {% endif %}
        </div>


    </div>
    <!-- /.container -->

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/jquery.tablesorter.min.js') }}" type="text/javascript"></script>
{% endblock %}