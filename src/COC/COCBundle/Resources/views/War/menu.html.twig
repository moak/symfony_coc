<div class="panel panel-default">
    {% if warInProgress %}
        <div class="panel-heading">
            Guerre en cours !
        </div>
        <div class="panel-body">
            {% if isInPreparation != 0 %}
                Jour de préparation (commence à {{ warInProgress.start|date_modify("+1 day")|date('d M H:s') }})
            {% else %}
                Jour de guerre (se termine à {{ warInProgress.end|date('d M H:s') }})
            {% endif %}
        </div>
    {% else %}
        <div class="panel-heading supercell-font">Guerres  <p class="pull-right"><a href="{{ path('coc_wars', {'id_clan': clan.id}) }}">Historique <span class="badge">{{ numberWars }}</span></a></p></div>
        <div class="panel-body">
            {% if nextWar|length !=0 %}
               <p> Prochaine guerre:  {{ nextWar[0].start|date('d M  à H:s') }}</p>
            {% else %}
                <p>Prochaine guerre: aucune</p>
            {% endif %}
        </div>
    {% endif %}
</div>



