{% extends "::base.html.twig" %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Guerres de clan</h1>
            </div>
        </div>

            {% if wars|length != 0 %}
            <table class="table">
                <thead>
                   <tr>
                       <th>Guerre de clan</th>
                       <th>Date</th>
                       <th>Résultat</th>
                    </tr>
                </thead>
                <tbody>
                {% for war in wars %}
                    <tr>
                        <td>
                            {% if war.opponent %}
                                CsP vs {{ war.opponent }}
                            {% else %}
                                En attente
                            {% endif %}
                        </td>
                        <td>{{ war.start|date('d M à H:s') }}</td>
                        <td>{{ war.result|result }}</td>
                    </tr>

                {% endfor %}
                </tbody>
            </table>
            {% else %}
                <p>0 guerre de clan trouvée</p>
            {% endif %}



    </div>
    <!-- /.container -->

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/footable.js') }}" type="text/javascript"></script>
{% endblock %}