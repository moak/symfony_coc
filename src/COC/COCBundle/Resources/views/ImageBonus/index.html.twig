{% extends "::base.html.twig" %}
{% set id_clan = clan.id %}
{% set active = "media" %}

 {% block title %}
     <title>{{ 'menu.bonus'|trans }}</title>
 {% endblock %}

{% block body %}

    <!-- Page Content -->
    <div class="container white-bg rounded-corners">

        <h2>{{ 'menu.bonus'|trans }}</h2>
        <hr>

        {% if app.user is defined and  app.user.clan is defined %}

            <a class="btn btn-normal btn-primary btn-lg" href="{{ path('coc_imageBonus_add', {'id_clan': clan.id }) }}">{{ 'menu.bonus_add'|trans }}</a>
        {% endif %}
        <div class="row">
            <br>
            {% if images|length != 0 %}
                {% for image in images %}
                    <div class="col-sm-6 col-md-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title text-center">{{ image.title }}</small></h3>
                            </div>
                            <div class="panel-body">
                                <a rel="gallery-1"  href="{{ asset(image.image.getWebPath(clan.id)) }}" class="swipebox" title="">
                                    <img  class="img-responsive" src="{{ asset(image.image.getWebPath(clan.id)) }}" />
                                </a>
                            </div>
                            <div class="panel-footer">
                                <h3 class="panel-title text-center">Post√© par {{ image.user.username }}  <small>{{ image.createdAt|date('U')|timeago }}</small></h3>

                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
    <!-- /.container -->
    <footer>
        {{ render(controller('COCBundle:Default:displaySeason')) }}
    </footer>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/jquery.tablesorter.min.js') }}" type="text/javascript"></script>
{% endblock %}