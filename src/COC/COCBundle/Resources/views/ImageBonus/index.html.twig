{% extends "::base.html.twig" %}

{% block body %}

    <!-- Page Content -->
    <div class="container">

        <h2>Bonus</h2>
        <hr>
            <a class="btn btn-normal btn-success" href="{{ path('coc_imageBonus_add') }}">Ajouter une image</a>

        <div class="row">
            <br>
            {% if images|length != 0 %}
                {% for image in images %}
                    <div class="col-sm-6 col-md-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title text-center">{{ image.title }}</small></h3>
                            </div>
                            <div class="panel-body">
                                <a rel="gallery-1"  href="{{ asset('uploads/' ~ image.image.path) }}" class="swipebox" title="">
                                    <img  class="img-responsive" src="{{ asset('uploads/' ~ image.image.path) }}" />
                                </a>

                            </div>
                            <div class="panel-footer">
                                <h3 class="panel-title text-center">Post√© par {{ image.user.username }}  <small>{{ image.createdAt|date('U')|timeago }}</small></h3>

                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
    <!-- /.container -->

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/jquery.tablesorter.min.js') }}" type="text/javascript"></script>
{% endblock %}