{% set locales = locales %}

<li class="dropdown">
    <a href="#" class="language" style="text-align: left;" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
        {%  if (current_locale == "fr") %}
            <img  style="width:20px;height:20px;vertical-align:middle; text-align: left;" src="{{ asset('images/fr.png') }}" >
        {% elseif (current_locale == "es") %}
            <img style="width:20px;height:20px;vertical-align:middle" src="{{ asset('images/es.png') }}" >
        {% else %}
            <img style="width:20px;height:20px;vertical-align:middle" src="{{ asset('images/en.png') }}" >
        {% endif %}
        <span class="caret"></span>

    </a>
    <ul class="dropdown-menu" role="menu">
        {% for locale in locales %}
            <li{% if current_locale == locale.locale %} class="active"{% endif %}>
                <a href="{{ locale.link }}" title="{{ locale.locale_current_language }}">{{ locale.locale_current_language }}</a>
            </li>
        {% endfor %}
    </ul>

</li>




