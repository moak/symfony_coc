{% extends "::base.html.twig" %}
{% set id_clan = clan.id %}
{% set active = 'media' %}

  {% block title %}
      <title>{{ 'menu.videos'|trans }}</title>
  {% endblock %}

{% block body %}

    <!-- Page Content -->
    <div class="container white-bg rounded-corners">

        <h2>{{ 'menu.video'|trans }}</h2>
        <hr>

            <a class="btn btn-normal btn-primary btn-lg" href="{{ path('coc_video_add', {'id_clan': clan.id } ) }}">{{ 'menu.video_add'|trans }}</a>

        <div class="row">
            <br>
            {% if videos|length != 0 %}
                {% for video in videos %}
                    <div class="col-sm-6 col-md-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title text-center">{{ video.title }}</h3>
                            </div>
                            <div class="panel-body">

                                <p>{{ video.url| raw  }}</p>
                            </div>
                            <div class="panel-footer">
                                <h3 class="panel-title text-center">Post√© par {{ video.user.username }}  <small>{{ video.createdAt|date('U')|timeago }}</small></h3>
                            </div>

                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>


    </div>
    <!-- /.container -->
    <footer>
        {{ render(controller('COCBundle:Default:displaySeason')) }}
    </footer>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/jquery.tablesorter.min.js') }}" type="text/javascript"></script>
{% endblock %}