{% extends "::base.html.twig" %}
{% set id_clan = clan.id %}
{% set active = 'media' %}

{% block body %}

    <!-- Page Content -->
    <div class="container">

        <h2>Vidéos</h2>
        <hr>

            <a class="btn btn-normal btn-success" href="{{ path('coc_video_add', {'id_clan': clan.id } ) }}">Ajouter une vidéo</a>

        <div class="row">
            <br>
            {% if videos|length != 0 %}
                {% for video in videos %}
                    <div class="col-sm-6 col-md-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title text-center">{{ video.title }}</h3>
                            </div>
                            <div class="panel-body">

                                <p>{{ video.url| raw  }}</p>
                            </div>
                            <div class="panel-footer">
                                <h3 class="panel-title text-center">Posté par {{ video.user.username }}  <small>{{ video.createdAt|date('U')|timeago }}</small></h3>
                            </div>

                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>


    </div>
    <!-- /.container -->

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/jquery.tablesorter.min.js') }}" type="text/javascript"></script>
{% endblock %}