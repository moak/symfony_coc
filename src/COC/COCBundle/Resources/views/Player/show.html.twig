{% extends "::base.html.twig" %}

{% block body %}

    <!-- Page Content -->
    <div class="container">

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Level</th>
                    <th>Nom du joueur</th>
                    <th>Trophies</th>
                    <th>Troops received</th>
                    <th>Troops sent</th>
                    <th>Victories</th>
                </tr>
            </thead>
            <tbody>
                    <tr>
                        <td>{{ player.level }}</td>
                        <td>{{ player.name }}</td>
                        <td>{{ player.trophy }}</td>
                        <td>{{ player.troopReceived }}</td>
                        <td>{{ player.troopSent }}</td>
                        <td>{{ player.attackWon }}</td>
                    </tr>

            </tbody>
        </table>
        <hr>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Your Website 2014</p>
                </div>
            </div>
        </footer>

    </div>
    <!-- /.container -->

{% endblock %}