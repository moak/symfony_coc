{% extends "::base.html.twig" %}

{% block body %}

    <!-- Page Content -->
    <div class="container">

        <h2>Membres du clan</h2>
        <hr>

        <table class="table table-hover tablesorter" id="myTable">
            <thead>
                <tr>
                    <th>Level</th>
                    <th>Nom du joueur</th>
                    <th>Trophies</th>
                    <th>Troops received</th>
                    <th>Troops sent</th>
                    <th>Victories</th>

                </tr>
            </thead>
            <tbody>

                {% if players|length != 0 %}

                    {% for player in players %}
                        <tr>
                            <td>{{ player.level }}</td>
                            <td>{{ player.name }}</td>
                            <td>{{ player.trophy }}</td>
                            <td>{{ player.troopReceived }}</td>
                            <td>{{ player.troopSent }}</td>
                            <td>{{ player.attackWon }}</td>
                        </tr>
                    {% endfor %}
                {% else %}
                   <tr>
                        <td></td>
                        <td>-</td>
                        <td>0 joueur trouv√©</td>
                        <td>-</td>
                        <td>-</td>
                        <td>-</td>
                        <td>-</td>
                       <td></td>
                   </tr>
                {% endif %}
            </tbody>
        </table>
        <hr>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Your Website 2014</p>
                </div>
            </div>
        </footer>

    </div>
    <!-- /.container -->

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/jquery.tablesorter.min.js') }}" type="text/javascript"></script>
{% endblock %}