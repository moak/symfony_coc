{% extends "::base.html.twig" %}

{% block body %}

<div class="container">

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Classement général</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>


    <div class="container">


        <div class="well">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

            {# Les erreurs générales du formulaire. #}
            {{ form_errors(form) }}

            <div class="form-group">
                {# Génération du label. #}
                {{ form_label(form.season, 'Rechercher par saison', {'label_attr': {'class': 'col-sm-3 control-label'}}) }}


                {# Affichage des erreurs pour ce champ précis. #}
                {{ form_errors(form.season) }}


                <div class="col-sm-4">
                    {# Génération de l'input. #}


                    {{ form_widget(form.season, { 'attr': {'class': 'form-control select_group'}, 'empty_value': '-- Add to Group --' }) }}


                </div>

                <div class="col-sm-4">
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>

            </div>

            {{ form_rest(form) }}
            {{ form_end(form) }}


        </div>


        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Level</th>
                    <th>Défence</th>
                    <th>Attaque</th>
                    <th>Total</th>
                    <th>Mis à jour</th>

                </tr>
            </thead>
            <tbody>

            {% if players|length != 0 %}
                {% for player in players %}
                    <tr>
                        <td>{{ player.name }}</td>
                        <td>{{ player.level }}</td>
                        <td>{{ player.totalDefence|round }}</td>
                        <td>{{ player.totalAttack|round }}</td>
                        <td>{{ player.total|round }}</td>
                        <td>{{ player.updatedAt|date('U')|timeago }}</td>

                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td>-</td>
                    <td>0 joueur trouvé</td>
                    <td>-</td>

                    <td></td>
                </tr>
            {% endif %}
            </tbody>
        </table>
        <hr>
        <div class="alert alert-success alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong>Info!</strong> Les points de défences et attaques sont calculées comme l'exemple suivant:<br><br>
            <strong>Défence:</strong>
            <br> - Canon niveau <strong>5</strong> = (<strong>5</strong>*(<strong>5</strong>-1)) / 2 = <strong>10 points.</strong>
            <br> - Mortier niveau <strong>6</strong> = (<strong>6</strong>*(<strong>6</strong>-1)) / 2 = <strong>15 points.</strong>
            <br><br><strong>Attaque:</strong>
            <br> - Archers niveau <strong>4</strong> = (<strong>4</strong>*(<strong>4</strong>-1)) / 2 = <strong>6 * 5 = 30 points.</strong>
        </div>

        </div>

    </div>
    </div>
    <!-- /.container -->

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/footable.js') }}" type="text/javascript"></script>
{% endblock %}