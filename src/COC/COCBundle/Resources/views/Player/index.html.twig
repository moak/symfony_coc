{% extends "::base.html.twig" %}

{% block body %}

<div class="container">

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Liste des joueurs</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>


    <!-- Page Content -->
    <div class="container">

        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Level</th>
                    <th>Défence</th>
                    <th>Attaque</th>
                    <th>Total</th>
                    <th>Mis à jour</th>

                </tr>
            </thead>
            <tbody>

            {% if players|length != 0 %}
                {% for player in players %}
                    <tr>
                        <td>{{ player.name }}</td>
                        <td>{{ player.level }}</td>
                        <td>{{ totals[loop.index-1]['defence'] }}</td>
                        <td>{{ totals[loop.index-1]['attack'] }}</td>
                        <td>{{ totals[loop.index-1]['defence'] + totals[loop.index-1]['attack']}}</td>
                        <td>{{ player.lastUpdate|date('U')|timeago }}</td>

                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td>-</td>
                    <td>0 joueur trouvé</td>
                    <td>-</td>

                    <td></td>
                </tr>
            {% endif %}
            </tbody>
        </table>
        <hr>

    </div>
    </div>
    <!-- /.container -->

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/footable.js') }}" type="text/javascript"></script>
{% endblock %}