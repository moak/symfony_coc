{% extends "::base.html.twig" %}
{% set id_clan = clan.id %}
{% set active = "home" %}

{% block body %}

    <!-- Page Content -->
    <div class="container">


        <div class="row">
            <div class="col-sm-8 feature">

                <!-- Title -->
                <div class="row">
                    <div class="col-lg-12">
                        <h3>Clan {{ clan.name }}</h3>
                        <hr>
                        <div class="well supercell-font">
                            {{ clan.description }}
                        </div>
                    </div>
                </div>
                <!-- /.row -->

                <!-- Page Features -->
                <div class="row supercell-font">


                    <div class="col-sm-4 feature">
                        <div class="panel panel-default">
                            <div class="panel-heading">Bases de guerre de clan</div>
                            <div class="panel-body">
                                <p><a href="{{ path('coc_images_base', {'id_clan': clan.id }) }}"><img class="img-responsive" src="{{ ('images/2014-12-11 22.07.05.png') | imagine_filter('my_thumb') }}"></a></p>
                                <p><a href="{{ path('coc_images_base', {'id_clan': clan.id }) }}"><button class="btn btn-block btn-info">Plus d'info</button></a></p>
                            </div>
                        </div>
                    </div><!-- end features -->

                    <div class="col-sm-4 feature">
                        <div class="panel panel-default">
                            <div class="panel-heading">Classement des joueurs</div>
                            <div class="panel-body">

                                <p><a href="{{ path('coc_players', {'id_clan': clan.id, 'type': '0' }) }}"><img class="img-responsive" src="{{ ('images/2015-01-16 13.32.49.png') | imagine_filter('my_thumb') }}"></a></p>
                                <p><a href="{{ path('coc_players', {'id_clan': clan.id, 'type': '0' }) }}"><button class="btn btn-block btn-danger">Plus d'info</button></a></p>
                            </div>
                        </div>
                    </div><!-- end features -->

                    <div class="col-sm-4  feature">
                        <div class="panel panel-default">
                            <div class="panel-heading">Meilleures attaques</div>
                            <div class="panel-body">
                                <p><a href="{{ path('coc_imagesBestAttack', {'id_clan': clan.id }) }}"><img class="img-responsive" src="{{ ('images/2014-12-28 02.09.46.png') | imagine_filter('my_thumb') }}"></a></p>
                                <p><a href="{{ path('coc_imagesBestAttack', {'id_clan': clan.id }) }}"><button class="btn btn-block btn-success">Plus d'info</button></a></p>
                            </div>
                        </div>
                    </div><!-- end features -->
                </div>
                <!-- /.row -->




            </div>
            <div class="col-sm-4 feature">


                {{ render(controller('COCBundle:War:menu', {'id_clan': clan.id })) }}

                {{ render(controller('COCBundle:Player:historyPlayers', {'id_clan': clan.id })) }}
                {{ render(controller('AdminBundle:VideoAdmin:mainPageModule', {'id_clan': clan.id })) }}


            </div>
        </div>






        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">

                </div>
            </div>
        </footer>

    </div>
    <!-- /.container -->

{% endblock %}