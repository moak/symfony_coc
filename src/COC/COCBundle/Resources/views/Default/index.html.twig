{% extends "::base.html.twig" %}
{% set id_clan = clan.id %}
{% set active = "home" %}

{% block body %}

   <!-- <a class="btn btn-large btn-success" href="javascript:void(0);" onclick="javascript:introJs().start();">Show me how</a>-->

     <!-- Page Content -->
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                {{ render(controller('COCBundle:War:menu', {'id_clan': clan.id })) }}
                <hr>
                <div class="panel panel-default">
                    <div class="panel-heading supercell-font">
                       Message du clan  <p class="pull-right"><a href="{{ path('coc_players', {'id_clan': clan.id, 'type': '0'}) }}">{{ numberPlayers }} / {{ clan.capacity }}  </a></p>
                    </div>
                    <div class="panel-body">
                        {{ clan.message }}
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                {{ render(controller('COCBundle:Player:historyPlayers', {'id_clan': clan.id })) }}
            </div>
        </div>

        <div class="row supercell-font">
            <div class="col-md-4">
                <div class="panel panel-default text-center">
                    <div class="panel-heading">Bases de guerre de clan</div>
                    <div class="panel-body">
                        <p><a href="{{ path('coc_images_base', {'id_clan': clan.id }) }}"><img class="img-responsive" src="{{ ('images/2014-12-11 22.07.05.png') | imagine_filter('my_thumb') }}"></a></p>
                        <p><a href="{{ path('coc_images_base', {'id_clan': clan.id }) }}"><button class="btn btn-block btn-info">Toutes les bases</button></a></p>
                    </div>
                </div>
            </div><!-- end features -->

            <div class="col-md-4">
                <div class="panel panel-default text-center">
                    <div class="panel-heading">Classement des joueurs</div>
                    <div class="panel-body">

                        <p><a href="{{ path('coc_players', {'id_clan': clan.id, 'type': '0' }) }}"><img class="img-responsive" src="{{ ('images/2015-01-16 13.32.49.png') | imagine_filter('my_thumb') }}"></a></p>
                        <p><a href="{{ path('coc_players', {'id_clan': clan.id, 'type': '0' }) }}"><button class="btn btn-block btn-danger">Afficher le classement</button></a></p>
                    </div>
                </div>
            </div><!-- end features -->

            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading text-center">Meilleures attaques</div>
                    <div class="panel-body">
                        <p><a href="{{ path('coc_imagesBestAttack', {'id_clan': clan.id }) }}"><img class="img-responsive" src="{{ ('images/2014-12-28 02.09.46.png') | imagine_filter('my_thumb') }}"></a></p>
                        <p><a href="{{ path('coc_imagesBestAttack', {'id_clan': clan.id }) }}"><button class="btn btn-block btn-success">Toutes les attaques</button></a></p>
                    </div>
                </div>
            </div><!-- end features -->
        </div>
        <!-- /.row -->



            {{ render(controller('AdminBundle:VideoAdmin:mainPageModule', {'id_clan': clan.id })) }}

        </div>




        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">

                </div>
            </div>
        </footer>

    </div>
    <!-- /.container -->

{% endblock %}