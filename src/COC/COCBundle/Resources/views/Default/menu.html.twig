<!-- Navigation -->
<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header page-scroll">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a   class="navbar-brand supercell-font" href="{{ path('coc', {'id_clan': clan.id }) }}">{{ clan.name }}</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                {% if active == "home" %} <li class="active"> {% else %} <li>{% endif %}<a href="{{ path('coc', {'id_clan': clan.id }) }}">{{ 'menu.home'|trans }}</a></li>

                {% if active == "classement" %} <li class="active dropdown"> {% else %} <li class="dropdown">{% endif %}
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"> <span class="badge">{{ numberPlayers }}</span> {{ 'menu.rankings'|trans }} <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="{{ path('coc_players', {'id_clan': clan.id, 'type': '0' }) }}"> {{ 'menu.player_rankings'|trans }}</a></li>
                        <li><a href="{{ path('coc_players', {'id_clan': clan.id, 'type': '1' }) }}"> {{ 'menu.player_activity'|trans }}</a></li>

                        <li><a href="{{ path('coc_imagesBestAttack', {'id_clan': clan.id }) }}">{{ 'menu.best_attacks'|trans }}  <span class="badge">{{ numberBestAttacks }}</span>  </a></li>

                    </ul>
                </li>

                {% if active == "base" %} <li class="active dropdown"> {% else %} <li class="dropdown">{% endif %}
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><span class="badge"> {{ numberBases }}</span> {{ 'menu.bases'|trans }} <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="{{ path('coc_images_base_add', {'id_clan': clan.id }) }}">{{ 'menu.new_base'|trans }}</a></li>
                        <li class="divider"></li>
                        <li><a href="{{ path('coc_images_base_category', {'id': 5, 'id_clan': clan.id} ) }}">{{ 'menu.ht5'|trans }}</a></li>
                        <li><a href="{{ path('coc_images_base_category', {'id': 6, 'id_clan': clan.id} ) }}">{{ 'menu.ht6'|trans }}</a></li>
                        <li><a href="{{ path('coc_images_base_category', {'id': 7, 'id_clan': clan.id} ) }}">{{ 'menu.ht7'|trans }}</a></li>
                        <li><a href="{{ path('coc_images_base_category', {'id': 8, 'id_clan': clan.id} ) }}">{{ 'menu.ht8'|trans }}</a></li>
                        <li><a href="{{ path('coc_images_base_category', {'id': 9, 'id_clan': clan.id} ) }}">{{ 'menu.ht9'|trans }}</a></li>
                    </ul>
                </li>

                {% if active == "media" %} <li class="active dropdown"> {% else %} <li class="dropdown">{% endif %}
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><span class="badge">{{ numberVideos + numberImagesBonus }}</span> {{ 'menu.media'|trans }} <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="{{ path('coc_videos', {'id_clan': clan.id }) }}"><span class="badge">{{ numberVideos }}</span>  {{ 'menu.video'|trans }} </a></li>
                        <li><a href="{{ path('coc_imagesBonus', {'id_clan': clan.id }) }}"><span class="badge">{{ numberImagesBonus }}</span>  {{ 'menu.bonus'|trans }} </a></li>
                    </ul>
                </li>

                {% if is_granted('ROLE_USER') %}
                    {%  if app.user.player.level is defined and clan.id == app.user.player.clan.id %}
                        <li><a class="blink-slow" href="{{ path('coc_player_edit', {'id': app.user.player.id ,'id_clan': clan.id }) }}"><b> {{ 'menu.edit_player'|trans }}</b></a></li>
                    {% else %}
                        <li><a class="blink" href=""><b>[{{ 'account.waiting'|trans }}]</b></a></li>
                    {% endif %}
                {% endif %}

            </ul>

            <ul class="nav navbar-nav navbar-right">
                <li class="hidden">
                    <a href="#page-top"></a>
                </li>

                {% if is_granted('ROLE_ADMIN') and clan.id == app.user.clan.id %}
                    <li><a data-step="5" data-intro="Managez votre clan depuis l'administration." target="_blank" href="{{ path('admin', {'id_clan': clan.id }) }}">Administration <span class="badge">{{  numberUsersNonAssigned }}</span></a></li>
                {% endif %}

                {% if is_granted('ROLE_USER')  %}
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">{{ app.user.username }} <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            {% if is_granted('ROLE_USER') %}
                            <li><a href="{{ path('fos_user_security_logout') }}"><i class="fa fa-sign-out fa-fw"></i>  {{ 'menu.disconnect'|trans }}</a>
                            {% endif %}
                        </ul>
                    </li>

                {% else %}
                    <li class="page-scroll">
                        <a href="{{ path('fos_user_registration_register') }}">{{ 'vitrine.join_clan'|trans }}</a>
                    </li>
                    <li class="page-scroll">
                        <a href="{{ path('fos_user_security_login') }}">Login</a>
                    </li>
                {% endif %}
