{% extends "::base.html.twig" %}

{% block body %}

    <!-- Page Content -->
    <div class="container">


        <h2>{{ category[0] }}  <a class="btn pull-right btn-normal btn-success" href="{{ path('coc_image_add') }}">Upload image</a></h2>



               <hr>

        <div class="row">
            {% for image in images %}
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <a rel="gallery-1"  href="{{ asset(image.getWebPath) }}" class="swipebox" title="{{ image.name }}">
                            <img  class="img-responsive" src="{{ asset(image.getWebPath) }}" />
                        </a>


                        <div class="caption">
                            <h3>{{ image.name }}<small> (Seyaa)</small></h3>

                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>


        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Your Website 2014</p>
                </div>
            </div>
        </footer>

    </div>
    <!-- /.container -->

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/jquery.tablesorter.min.js') }}" type="text/javascript"></script>
{% endblock %}