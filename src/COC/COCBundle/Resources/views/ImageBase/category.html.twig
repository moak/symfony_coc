{% extends "::base.html.twig" %}
{% set id_clan = clan.id %}
{% set active = "base" %}

{% block body %}

    <!-- Page Content -->
    <div class="container white-bg rounded-corners">

        <h1 class="page-header">{{ 'menu.ht'|trans }} {{ hall_town }}

            {% if is_granted('ROLE_ADMIN') and app.user.clan == clan %}
                <a class="btn btn-normal btn-success btn-normal" href="{{ path('admin_bases', {'id_clan': clan.id } ) }}">{{ 'menu.admin_base'|trans }}</a>
            {% endif %}

            {%  if app.user is defined  %}
                {% if app.user.player.clan is defined and app.user.player is defined  %}
                    {% if app.user.player.clan == clan %}
                        <a class="btn btn-lg btn-primary pull-right" href="{{ path('coc_images_base_add', {'id_clan': clan.id }) }}"> {{ 'menu.base_add'|trans }}</a></h1>
                    {% endif %}
                {% endif %}
            {% endif %}

        <br>

            {% if images|length != 0 %}
                {% for image in images %}
                    <div class="col-sm-6 col-md-4">
                        <div class="panel panel-default text-center">
                            <div class="panel-heading">
                                <h3 class="panel-title ">
                                    {% if image.type == 1 %}
                                        {{ 'label.war'|trans }}
                                    {% else %}
                                        {{ 'label.farm'|trans }}
                                    {% endif %}
                                </h3>
                            </div>
                            <div class="panel-body">
                                <a rel="gallery-1"  href="{{ asset(image.image.getWebPath(clan.id)) }}" class="swipebox" title="">
                                    <img  class="img-responsive" src="{{ asset(image.image.getWebPath(clan.id)) }}" />
                                </a>
                            </div>
                            <div class="panel-footer supercell-font">
                                {{ 'label.posted_by'|trans }} {{ image.user.username }}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>



    <!-- /.container -->
    <footer>
        {{ render(controller('COCBundle:Default:displaySeason')) }}
    </footer>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/jquery.tablesorter.min.js') }}" type="text/javascript"></script>
{% endblock %}






















