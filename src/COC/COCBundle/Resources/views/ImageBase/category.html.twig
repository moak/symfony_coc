{% extends "::base.html.twig" %}
{% set id_clan = clan.id %}
{% set active = "base" %}

{% block body %}

    <!-- Page Content -->
    <div class="container">

        <h2>{{ 'menu.ht'|trans }} {{ hall_town }}</h2>

        <hr>

        <p><a class="btn btn-normal btn-primary btn-lg" href="{{ path('coc_images_base_add', {'id_clan': clan.id }) }}">{{ 'menu.base_add'|trans }}</a></p>

        <br>

        <div class="row">
            {% if images|length != 0 %}
                {% for image in images %}

                        <div class="col-sm-6 col-md-4">
                            <div class="panel panel-default text-center">
                                <div class="panel-heading">
                                    <h3 class="panel-title ">
                                        {% if image.type == 1 %}
                                            {{ 'label.war'|trans }}
                                        {% else %}
                                            {{ 'label.farm'|trans }}
                                        {% endif %}
                                    </h3>
                                </div>
                                <div class="panel-body">
                                    <a rel="gallery-1"  href="{{ asset('uploads/' ~ image.image.path) }}" class="swipebox" title="">
                                        <img  class="img-responsive" src="{{ asset('uploads/' ~ image.image.path) }}" />
                                    </a>
                                </div>
                                <div class="panel-footer supercell-font">
                                    {{ 'label.posted_by'|trans }} {{ image.user.username }}
                                </div>
                            </div>
                        </div>

                {% endfor %}
            {% endif %}
        </div>
    </div>
        <hr>


    </div>
    <!-- /.container -->

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/jquery.tablesorter.min.js') }}" type="text/javascript"></script>
{% endblock %}






















