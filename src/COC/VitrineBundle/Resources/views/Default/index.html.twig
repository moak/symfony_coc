{% extends "::base_vitrine.html.twig" %}

{% block body %}

    <!-- Header -->
    <a name="about"></a>
    <div class="intro-header">
        <div class="container">

            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-message">
                        <h1>Oh My Clan !</h1>
                        <h3>Managez et améliorer votre clan simplement.</h3>
                        <hr class="intro-divider">
                        <ul class="list-inline intro-social-buttons">
                            <li>
                                <a href="#register" class="btn btn-default btn-lg"><i class="fa fa-twitter fa-fw"></i> <span class="network-name">Créer un clan</span></a>
                            </li>
                            <li>
                                <a href="{{ path('coc' , { 'id_clan': 1 }) }}" class="btn btn-default  btn-lg"><i class="fa fa-twitter fa-fw"></i> <span class="network-name">Démo</span></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.intro-header -->

    <div class="content-section-a">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-sm-6">
                    <hr class="section-heading-spacer">
                    <div class="clearfix"></div>
                    <h2 class="section-heading"><br>Classement des joueurs</h2>
                    <p class="lead"> Obtenez des informations non disponibles sur Clash of Clan comme la possibilité de trier les joueurs par niveaux, nombres d'attaques, niveau de défences, etc.</p>
                </div>
                <div class="col-lg-6 col-lg-offset-2 col-sm-6">
                    <img class="img-responsive" src="{{ asset('images/ipad.png') }}" alt="">
                </div>
            </div>
        </div>
        <!-- /.container -->
    </div>
    <!-- /.content-section-a -->


    <div class="content-section-b">

        <div class="container">

            <div class="row">
                <div class="col-lg-4 col-lg-offset-1 col-sm-push-6  col-sm-4">
                    <hr class="section-heading-spacer">
                    <div class="clearfix"></div>
                    <h2 class="section-heading">Résumé de chaques joueurs</h2>
                    <p class="lead">Comparez vousx en détails avec les membres de votre clan et découvrez qui est le meilleur guerrier de votre clan </p>
                </div>
                <div class="col-lg-6 col-sm-pull-4  col-sm-6">
                    <img class="img-responsive" src="{{ asset('images/ipad2.png') }}" alt="">
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.content-section-b -->

    <div class="content-section-a">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-sm-6">
                    <hr class="section-heading-spacer">
                    <div class="clearfix"></div>
                    <h2 class="section-heading"><br>Classement des joueurs</h2>
                    <p class="lead"> Obtenez des informations non disponibles sur Clash of Clan comme la possibilité de trier les joueurs par niveaux, nombres d'attaques, niveau de défences, etc.</p>
                </div>
                <div class="col-lg-6 col-lg-offset-2 col-sm-6">
                    <img class="img-responsive" src="{{ asset('images/ipad.png') }}" alt="">
                </div>
            </div>
        </div>
        <!-- /.container -->
    </div>
    <!-- /.content-section-a -->


    <div class="banner" id="register">

        <div class="container">

            <div class="row">
                <div class="col-lg-6">
                    <h2>Créer votre clan</h2>
                </div>
                <div class="col-lg-6">
                    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                    {{ form_errors(form) }}
                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-6">
                                    {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="col-xs-6">
                                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                </div>

                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-6">
                                    {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="col-xs-6">
                                    {{ form_widget(form.password2, {'attr': {'class': 'form-control'}}) }}
                                </div>

                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-12">
                                    {{ form_widget(form.name_clan, {'attr': {'class': 'form-control'}}) }}
                                </div>

                            </div>
                        </div>

                        <button type="submit" class="btn btn-success btn-block">Créer mon clan !</button>
                    {{ form_rest(form) }}
                    {{ form_end(form) }}
                    {{ form(form)}}
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.banner -->


    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="list-inline pull-right">
                        <li>
                            <a href="#"><img src="{{ asset('images/facebook.svg') }}"></a>
                        </li>
                        <li class="footer-menu-divider">&sdot;</li>

                        <li>
                            <a href="#"><img src="{{ asset('images/twitter.svg') }}"></a>
                        </li>
                    </ul>
                    <p class="copyright text-muted small">Copyright &copy; OhMyClan 2015. All Rights Reserved</p>
                </div>
            </div>
        </div>
    </footer>







{% endblock %}

{% block javascripts %}

{% endblock %}