{% extends "::base_vitrine.html.twig" %}

{% block body %}
<link rel="stylesheet" href="{{ asset('css/players.css') }}" />

<div class="container">

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Classement général</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>


    <div class="container">

        <table class="table classement-list">
            <thead>
                <tr>
                	<th></th>
                    <th class="supercell-font">Nom</th>
                </tr>
            </thead>
            <tbody>
            
            {% if clans|length != 0 %}
                {% for clan in clans %}
                    <tr>
                        <td>{{ clan.name }}</td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td>0 clan trouvé</td>
                </tr>
            {% endif %}
            </tbody>
        </table>

        </div>

    </div>
    </div>
    <!-- /.container -->

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/footable.js') }}" type="text/javascript"></script>
{% endblock %}