{% extends "::base.html.twig" %}

{% block body %}

    <!-- Page Content -->
    <div class="container">
        <a class="btn btn-normal btn-success" href="{{ path('coc_user_info_add') }}">Liste des utilisateurs</a>
        <hr>

        <table class="table table-hover">
            <thead>
            <tr>
                <th>Username</th>
                <th>Compte assigné</th>
                <th></th>
            </tr>
            </thead>
            <tbody>

            {% if users|length != 0 %}
                {% for info in users %}
                    <tr>
                        <td>{{ info.username }}</td>
                        {% if (info.referenced == 0) %}
                            <td>Non</td>
                        {% else %}
                            <td>Oui</td>
                        {% endif %}

                        {% if (info.referenced == 0) %}
                            <td><a class="btn btn-normal btn-success" href="{{ path('coc_user_info_delete', { 'id' : info.id } ) }}">Assigner</a></td>
                        {% else %}
                            <td></td>
                        {% endif %}
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td></td>
                    <td>-</td>
                    <td>0 joueur trouvé</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                    <td></td>
                </tr>
            {% endif %}
            </tbody>
        </table>
        <hr>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Your Website 2014</p>
                </div>
            </div>
        </footer>

    </div>
    <!-- /.container -->

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/jquery.tablesorter.min.js') }}" type="text/javascript"></script>
{% endblock %}