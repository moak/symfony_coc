{% trans_default_domain 'FOSUserBundle' %}

<div class="container">

    <br><br>
    <div id="loginbox" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-primary" >
            <div class="panel-heading">

                <div class="panel-title hidden-sm hidden-xs">
                    <a href="#" class="btn btn-normal supercell-font" onClick="displayButton('create')"> {{ 'fos.create_clan'|trans }}</a>
                    <a href="#" class="btn btn-normal supercell-font pull-right" onClick="displayButton('join')"> {{ 'fos.join_clan'|trans }}</a>
                </div>
                <div class="panel-title hidden-md hidden-lg">
                    <a href="#" class="btn btn-normal btn-block" onClick="displayButton('create')"> {{ 'fos.create_clan'|trans }}</a>

                    <a href="#" class="btn btn-normal btn-block" onClick="displayButton('join')"> {{ 'fos.join_clan'|trans }}</a>
                </div>

                <!--<div style="float:right; font-size: 80%; position: relative; top:-10px"><a href="{#path('fos_user_security_login') #}">login</a></div>-->
            </div>

            <div style="padding-top:50px" class="panel-body" >

                <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
                <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal" role="form">

                    {{ form_row(form._token) }}

                    <div class="form-group{% if form.username.vars.errors[0].message is defined %} has-error{% endif %}">
                        {{ form_label(form.username, null, {'label_attr': {'class': 'col-sm-5 control-label'}}) }}
                        <div class="col-sm-6">
                            {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder' : 'New username'}}) }}
                            {% if form.username.vars.errors[0].message is defined %}
                                <span class="help-block">{{ form.username.vars.errors[0].message }}</span>
                            {% endif %}
                        </div>
                    </div>

                    <div class="form-group{% if form.plainPassword.first.vars.errors[0].message is defined %} has-error{% endif %}">
                        {{ form_label(form.plainPassword.first, null, {'label_attr': {'class': 'col-sm-5 control-label'}}) }}
                        <div class="col-sm-6">
                            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder' : 'Password'}}) }}
                            {% if form.plainPassword.first.vars.errors[0].message is defined %}
                                <span class="help-block">{{ form.plainPassword.first.vars.errors[0].message }}</span>
                            {% endif %}
                        </div>
                    </div>
                    <div class="form-group{% if form.plainPassword.second.vars.errors[0].message is defined %} has-error{% endif %}">
                        {{ form_label(form.plainPassword.second, null, {'label_attr': {'class': 'col-sm-5 control-label'}}) }}
                        <div class="col-sm-6">
                            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder' : 'Repeat the password'}}) }}
                            {% if form.plainPassword.second.vars.errors[0].message is defined %}
                                <span class="help-block">{{ form.plainPassword.second.vars.errors[0].message }}</span>
                            {% endif %}
                        </div>
                    </div>

                    {% if type == "join" %}
                        <div id="create-clan" style="display:none;">
                    {% else %}
                        <div id="create-clan" >
                    {% endif %}
                        <div class="form-group">
                            {{ form_label(form.clanName, null, {'label_attr': {'class': 'col-sm-5 control-label'}}) }}
                            <div class="col-sm-6">
                                {{ form_widget(form.clanName, {'attr': {'class': 'form-control', 'placeholder' : 'Name of your new clan'}}) }}
                                {% if form.clanName.vars.errors[0].message is defined %}
                                    <span class="help-block">{{ form.clanName.vars.errors[0].message }}</span>
                                {% endif %}
                            </div>
                        </div>

                        <div class="form-group">
                            {{ form_label(form.pass, null, {'label_attr': {'class': 'col-sm-5 control-label'}}) }}
                            <div class="col-sm-6">
                                {{ form_widget(form.pass, {'attr': {'class': 'form-control', 'placeholder' : 'Password of your new clan'}}) }}
                                {% if form.pass.vars.errors[0].message is defined %}
                                    <span class="help-block">{{ form.pass.vars.errors[0].message }}</span>
                                {% endif %}
                            </div>
                        </div>

                    </div>

                    {% if type == "join" %}
                        <div id="join-clan">
                    {% else %}
                        <div id="join-clan" style="display:none;">
                    {% endif %}
                        <div class="form-group">
                            {{ form_label(form.clan, null, {'label_attr': {'class': 'col-sm-5 control-label'}}) }}
                            <div class="col-sm-6">
                                {{ form_widget(form.clan, {'attr': {'class': 'form-control selectpicker show-tick'}}) }}
                                {% if form.clan.vars.errors[0].message is defined %}
                                    <span class="help-block">{{ form.clan.vars.errors[0].message }}</span>
                                {% endif %}
                            </div>
                        </div>

                        <div class="form-group">
                            {{ form_label(form.password, null, {'label_attr': {'class': 'col-sm-5 control-label'}}) }}
                            <div class="col-sm-6">
                                {{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder' : 'Password of the existant clan'}}) }}
                                {% if wrongPassword is defined %}
                                    <span class="help-block">Wrong password</span>
                                {% endif %}
                            </div>
                        </div>

                    </div>





                    <div class="form-group{% if form.email.vars.errors[0].message is defined %} has-error{% endif %}">
                        {{ form_label(form.email, null, {'label_attr': {'class': 'col-sm-5 control-label'}}) }}
                        <div class="col-sm-6">
                            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder' : 'Email address'}}) }}
                            {% if form.email.vars.errors[0].message is defined %}
                                <span class="help-block">{{ form.email.vars.errors[0].message }}</span>
                            {% endif %}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.phone, null, {'label_attr': {'class': 'col-sm-5 control-label'}}) }}
                        <div class="col-sm-6">
                            {{ form_widget(form.phone, {'attr': {'class': 'form-control', 'placeholder' : 'Phone number'}}) }}
                            {% if form.phone.vars.errors[0].message is defined %}
                                <span class="help-block">{{ form.phone.vars.errors[0].message }}</span>
                            {% endif %}
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-sm-5 control-label required"></label>
                        <div class="col-sm-6">
                            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                        </div>
                    </div>

                    {{ form_rest(form) }}
                    {% for flashMessage in app.session.flashbag.get('error') %}
                        <div class="flash-notice">
                            {{ flashMessage }}
                        </div>
                    {% endfor %}
                </form>



        </div>
    </div>

</div><!-- End row -->

</div>