{% extends "::base_vitrine.html.twig" %}


{% block body %}

    <div class="container">
        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="flash-{{ type }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {% block fos_user_content %}
        {% endblock fos_user_content %}
    </div>
<br>
    <!-- Header -->
    <a name="about"></a>
    <div class="intro-header">
        <div class="container">

            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-message">
                        <h1>Oh My Clan !</h1>
                        <h3>Managez et améliorer votre clan simplement.</h3>
                        <hr class="intro-divider">
                        <ul class="list-inline intro-social-buttons">
                            {% if not is_granted('ROLE_USER') or  not is_granted('ROLE_ADMIN') %}
                                <li>
                                    <a href="#register" class="btn btn-default btn-lg"><i class="fa fa-twitter fa-fw"></i> <span class="network-name">Créer un clan</span></a>
                                </li>
                            {% endif %}
                            <li>
                                <a href="{{ path('coc' , { 'id_clan': 3 }) }}" class="btn btn-default  btn-lg"><i class="fa fa-twitter fa-fw"></i> <span class="network-name">Démo</span></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.intro-header -->



    <div class="content-section-a">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-sm-6">
                    <hr class="section-heading-spacer">
                    <div class="clearfix"></div>
                    <h2 class="section-heading"><br>Classement des joueurs</h2>
                    <p class="lead"> Obtenez des informations non disponibles sur Clash of Clan comme la possibilité de trier les joueurs par niveaux, nombres d'attaques, niveau de défences, etc.</p>
                </div>
                <div class="col-lg-6 col-lg-offset-2 col-sm-6">
                    <img class="img-responsive" src="{{ asset('images/ipad.png') }}" alt="">
                </div>
            </div>
        </div>
        <!-- /.container -->
    </div>
    <!-- /.content-section-a -->


    <div class="content-section-b">

        <div class="container">

            <div class="row">
                <div class="col-lg-4 col-lg-offset-1 col-sm-push-6  col-sm-4">
                    <hr class="section-heading-spacer">
                    <div class="clearfix"></div>
                    <h2 class="section-heading">Activité des joueurs par saison</h2>
                    <p class="lead">Identifiez très simplement les membres actifs de votre clan, en affichant le nombre de troupes recues, envoyées ainsi que le nombre d'attaques pour chacune des saisons. </p>
                </div>
                <div class="col-lg-6 col-sm-pull-4  col-sm-6">
                    <img class="img-responsive" src="{{ asset('images/ipad3.png') }}" alt="">
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.content-section-b -->

    <div class="content-section-a">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-sm-6">
                    <hr class="section-heading-spacer">
                    <div class="clearfix"></div>
                    <h2 class="section-heading">Résumé de chaques joueurs</h2>
                    <p class="lead"> Obtenez des informations non disponibles sur Clash of Clan comme la possibilité de trier les joueurs par niveaux, nombres d'attaques, niveau de défences, etc.</p>
                </div>
                <div class="col-lg-6 col-lg-offset-2 col-sm-6">
                    <img class="img-responsive" src="{{ asset('images/ipad.png') }}" alt="">
                </div>
            </div>
        </div>
        <!-- /.container -->
    </div>
    <!-- /.content-section-a -->

    <div class="banner" id="register">

        <div class="container">
            {% if is_granted('ROLE_ANONYMOUS') %}
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <a href="{{ path('fos_user_registration_register') }}"><h2>Créer un clan</h2></a>
                    </div>


                    {# include('VitrineBundle:Default:registration_clan.html.twig') #}

                </div>
            {% endif %}

        </div>
        <!-- /.container -->

    </div>
    <!-- /.banner -->


    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="list-inline pull-right">
                        <li>
                            <a href="#"><img src="{{ asset('images/facebook.svg') }}"></a>
                        </li>
                        <li class="footer-menu-divider">&sdot;</li>

                        <li>
                            <a href="#"><img src="{{ asset('images/twitter.svg') }}"></a>
                        </li>
                    </ul>
                    <p class="copyright text-muted small">Copyright &copy; OhMyClan 2015. All Rights Reserved</p>
                </div>
            </div>
        </div>
    </footer>


{% endblock %}