
{% trans_default_domain 'FOSUserBundle' %}


{% block fos_user_content %}

<div class="row">

    <div class="page-header">
        <h1>  {{ 'fos.forgot_password'|trans }}</h1>
    </div>


    <div class="col-md-6">
        <h4>{{ 'fos.you_forgot_password'|trans }} ?</h4>
        <p>{{ 'fos.description'|trans }}</p>
    </div>

    <div class="col-md-6">
        <form role="form" action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="form form-horizontal fos_user_resetting_request">
            <div class="form-group">
                <div class="col-md-6">
                    <label for="username">{{ 'resetting.request.username'|trans }}</label>
                    <input type="text" class="form-control" id="username" name="username" required="required" />

                </div>
            </div>

            <input class="btn btn-primary" role="button" type="submit" value="{{ 'resetting.request.submit'|trans }}" />
        </form>
    </div>


</div><!-- End row -->

{% endblock %}