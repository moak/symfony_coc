    <script>
        function changeLanguage(path, langue, supported) {
            var DATA = "locale=" + langue;
            $.ajax({
                type: "POST",
                url: Routing.generate('homepage', {'_locale': langue}),
                data: DATA,
                success: function (msg) {
                    for (var key in supported) {
                        if (path.indexOf(supported[key]) > -1) {
                            var newPath = path.replace(supported[key], langue);
                            location.href = newPath;
                            return;
                        }
                    }
                    location.href = path + langue;
                    return false;
                },
                error: function (msg) {
                    console.log(msg);
                    return true;
                }
            });
        }
    </script>
